{
    "name": "litepie/database",
    "description": "Advanced Laravel Database package with enhanced Eloquent traits, scopes, casts, and utilities for modern Laravel applications",
    "type": "library",
    "homepage": "https://github.com/litepie/database",
    "keywords": [
        "laravel",
        "eloquent",
        "database",
        "orm",
        "traits",
        "scopes",
        "caching",
        "archivable",
        "searchable",
        "sluggable",
        "sortable",
        "encryptable"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Lavalite Team",
            "email": "support@lavalite.org",
            "homepage": "https://lavalite.org"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/cache": "^12.0",
        "illuminate/encryption": "^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "mockery/mockery": "^1.5",
        "laravel/pint": "^1.0",
        "nunomaduro/larastan": "^2.0",
        "psalm/plugin-laravel": "^2.0",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Database\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/pint"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Database\\DatabaseServiceProvider"
            ],
            "aliases": {
                "ModelMacro": "Litepie\\Database\\Facades\\ModelMacro"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
