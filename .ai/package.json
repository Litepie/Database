{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "litepie/database",
  "version": "1.0.0",
  "description": "Advanced Laravel Eloquent enhancement package with 14 powerful traits",
  "ai_ready": true,
  "package_type": "laravel-library",
  
  "capabilities": {
    "version_control": {
      "trait": "Versionable",
      "features": ["rollback", "history", "comparison", "user_tracking"],
      "file": "src/Traits/Versionable.php",
      "examples": "examples/versionable_example.php"
    },
    "metadata_storage": {
      "trait": "Metable",
      "features": ["key_value_storage", "type_safe", "query_scopes", "wordpress_style"],
      "file": "src/Traits/Metable.php",
      "examples": "examples/metable_example.php"
    },
    "multi_language": {
      "trait": "Translatable",
      "features": ["i18n", "locale_switching", "fallback", "completeness_tracking"],
      "file": "src/Traits/Translatable.php",
      "examples": "examples/translatable_example.php"
    },
    "search": {
      "trait": "Searchable",
      "features": ["full_text", "fuzzy", "weighted", "boolean"],
      "file": "src/Traits/Searchable.php"
    },
    "caching": {
      "trait": "Cacheable",
      "features": ["query_caching", "tags", "invalidation", "warm_up"],
      "file": "src/Traits/Cacheable.php"
    },
    "slug_generation": {
      "trait": "Sluggable",
      "features": ["seo_friendly", "unique", "multi_strategy"],
      "file": "src/Traits/Sluggable.php"
    },
    "analytics": {
      "trait": "Aggregatable",
      "features": ["statistics", "trends", "comparisons", "yoy", "growth_rate"],
      "file": "src/Traits/Aggregatable.php",
      "examples": "examples/aggregatable_example.php"
    },
    "pagination": {
      "trait": "Paginatable",
      "features": ["cursor", "seek", "window", "cached", "optimized"],
      "file": "src/Traits/Paginatable.php",
      "examples": "examples/paginatable_example.php"
    },
    "archiving": {
      "trait": "Archivable",
      "features": ["soft_archive", "reason_tracking", "user_tracking"],
      "file": "src/Traits/Archivable.php"
    },
    "export": {
      "trait": "Exportable",
      "features": ["csv", "excel", "json", "streaming"],
      "file": "src/Traits/Exportable.php",
      "examples": "examples/exportable_example.php"
    },
    "import": {
      "trait": "Importable",
      "features": ["csv", "validation", "preview", "mapping"],
      "file": "src/Traits/Importable.php",
      "examples": "examples/importable_example.php"
    },
    "sorting": {
      "trait": "Sortable",
      "features": ["manual_ordering", "drag_drop", "position"],
      "file": "src/Traits/Sortable.php"
    },
    "bulk_operations": {
      "trait": "Batchable",
      "features": ["chunking", "bulk_update", "bulk_insert", "bulk_delete"],
      "file": "src/Traits/Batchable.php",
      "examples": "examples/batchable_example.php"
    },
    "performance_monitoring": {
      "trait": "Measurable",
      "features": ["query_metrics", "slow_query_logging", "performance_measurement"],
      "file": "src/Traits/Measurable.php",
      "examples": "examples/measurable_example.php"
    }
  },
  
  "ai_resources": {
    "documentation": {
      "main": ".ai/README.md",
      "quick_reference": ".ai/quick-reference.md",
      "capabilities": ".ai/package-capabilities.yaml",
      "examples": ".ai/code-examples.md",
      "prompts": ".ai/ai-prompts.md"
    },
    "editor_integrations": {
      "cursor": ".cursorrules",
      "github_copilot": "README.md",
      "general": ".ai/"
    }
  },
  
  "use_cases": {
    "cms": ["Versionable", "Translatable", "Sluggable", "Searchable", "Cacheable"],
    "ecommerce": ["Translatable", "Metable", "Searchable", "Cacheable", "Sluggable"],
    "analytics": ["Aggregatable", "Cacheable", "Exportable"],
    "user_management": ["Metable", "Versionable", "Archivable"],
    "blog": ["Versionable", "Translatable", "Sluggable", "Searchable"],
    "saas": ["all_traits"]
  },
  
  "migrations_required": {
    "Versionable": "model_versions",
    "Metable": "model_meta",
    "Translatable": "model_translations"
  },
  
  "example_count": 100,
  "traits_count": 14,
  "total_methods": 200,
  
  "compatible_with": {
    "ai_assistants": [
      "GitHub Copilot",
      "Cursor AI",
      "ChatGPT",
      "Claude",
      "Amazon CodeWhisperer",
      "Tabnine",
      "Codeium"
    ],
    "laravel_versions": ["10.x", "11.x", "12.x"],
    "php_versions": ["8.2", "8.3", "8.4"]
  },
  
  "getting_started_prompts": [
    "How do I track changes to my model?",
    "I need custom product attributes",
    "Show me how to add multi-language support",
    "How do I create analytics dashboards?",
    "I need to paginate 1 million records efficiently"
  ]
}
